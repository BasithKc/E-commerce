<%- include('partials/header.ejs') %>
  <div class="container tm-mt-big tm-mb-big">
    <div class="row">
      <%if(message[0]) { %>
        <div style="z-index: 1000;" id="notification" class="notification hidden">
          <i class="fa-sharp fa-solid fa-check" style="color: #FFD43B;"></i>
          <%= message %>
        </div>
        <% } %>
          <div class="col-xl-9 col-lg-10 col-md-12 col-sm-12 mx-auto">
            <div class="tm-bg-primary-dark tm-block tm-block-h-auto">
              <div class="row">
                <div class="col-12">
                  <h2 class="tm-block-title d-inline-block">Edit Banner</h2>
                </div>
              </div>
              <div class="row tm-edit-product-row">
                <div class="col-xl-12 col-lg-6 col-md-12">
                  <form action="/admin/banners/edit-banner/<%= banner._id%>" method="post" class="tm-edit-product-form"
                    enctype="multipart/form-data">
                    <div class="row">
                      <div class="col-xl-6 col-lg-6 col-md-12">
                        <div class="form-group mb-3">
                          <label for="bannerHead">banner Head
                          </label>
                          <input id="bannerHead" value="<%= banner.bannerHead%>" name="bannerHead" type="text"
                            class="form-control validate" required />
                        </div>

                        <div class="form-group mb-3">
                          <label for="charecterist">Charecterist
                          </label>
                          <input id="charecterist" value="<%= banner.charecterist%>" name="charecterist" type="text"
                            class="form-control validate">
                        </div>

                        <div class="form-group mb-3">
                          <label for="description">Description</label>
                          <textarea class=" form-control validate" rows="3" name="description"
                            required><%= banner.description%></textarea>
                        </div>
                        <div class="form-group mb-3 ">
                          <label for="expire_date">Expire Date
                          </label>
                          <input id="expire_date" name="expire_date" type="text" value="<%= banner.expire_date%>"
                            class="form-control validate" />
                        </div>
                      </div>

                      <div class="col-xl-6 col-lg-6 col-md-12 mx-auto mb-4">
                        <div id="image-preview" class="tm-product-img-dummy mx-auto">
                          <img id="image-preview" src=" /assets/images/banners/<%=banner.image%>" alt="Product image"
                            class="img-fluid d-block mx-auto" style="width: 100%; height: 100%;">
                        </div>
                        <div class="custom-file mt-3 mb-3">
                          <input id="fileInput" type="file" style="display:none;" name="image"
                            onchange="previewImage(event)" multiple />

                          <input type="button" class="btn btn-primary btn-block mx-auto" value="UPLOAD NEW IMAGE"
                            onclick="document.getElementById('fileInput').click();" />
                        </div>
                      </div>
                    </div>
                    <div class="col-xl-12">
                      <button type="submit" class="btn btn-primary btn-block text-uppercase">Edit Banner </button>
                    </div>
                  </form>
                </div>
              </div>
            </div>
          </div>
    </div>
  </div>
  <footer class="tm-footer row tm-mt-small">
    <div class="col-12 font-weight-light">
      <p class="text-center text-white mb-0 px-4 small">
        Copyright &copy; <b>2018</b> All rights reserved.

        Design: <a rel="nofollow noopener" href="https://templatemo.com" class="tm-footer-link">Template
          Mo</a>
      </p>
    </div>
  </footer>

  </div>
  </body>

  </html>