<%- include('partials/header.ejs') %>
  <div class="container mt-5">
    <form action="/admin/orders" method="post">
    <div class="d-flex align-items-center" style="gap: 10px;">
        <input type="search" name="search" placeholder="Search" value="<%= search %>" style="width: 95%;height: 40px;">
        <button type="submit"> <i class="fa-solid fa-magnifying-glass" style="background-color: white;padding: 10px;"></i></button>       
      </div>
    </form>
    <div class="row tm-content-row mt-3">
      <div class="col-12 tm-block-col">
        <div class="tm-bg-primary-dark p-3 tm-block-taller tm-block-scroll">
          <h2 class="tm-block-title text-center">Orders List</h2>
          <table class="table">
            <thead>
              <tr>
                <th scope="col">ORDER NO.</th>
                <th scope="col">STATUS</th>
                <th scope="col">OPERATORS</th>
                <th scope="col">LOCATION</th>
                <th scope="col">START DATE</th>
                <th scope="col">EST DELIVERY DUE</th>
                <th scope="col">&nbsp;</th>

              </tr>
            </thead>
            <tbody>
              <% totalOrders.forEach(userOrder => { %>
                  <% userOrder.orders.forEach(order => {%>

            
              <tr>
                <th scope="row"><b><%= order.orderId %></b></th>
                <td>
                  <% if(order.status === 'Cancelled') {%>
                  <i class="fa-solid fa-circle" style="color: #fb0404;font-size: 0.5rem;"></i>
                  <%} else {%>
                  <div class="tm-status-circle moving">
                  <%}%>                   
                  </div><%= order.status %>
                </td>
                <td><b><%= order.operator %></b></td>
                <td><b><%= order.location %></b></td>              
                <td><%= order.start_date %></td>
                <td><%= order.estDeliverydue %></td>
                <td>
                  <a href="/admin/order/edit-order/<%= order._id%> %>" class="tm-product-edit-link">
                    <i class="far fa-solid fa-pen-to-square "></i>
                  </a>
                </td>
              </tr>

              <% })%>
            <%})%>;

            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
  <footer class="tm-footer row tm-mt-small" style="margin-top: 130px;">
    <div class="col-12 font-weight-light">
      <p class="text-center text-white mb-0 px-4 small">
        Copyright &copy; <b>2018</b> All rights reserved.

        Design: <a rel="nofollow noopener" href="https://templatemo.com" class="tm-footer-link">Template Mo</a>
      </p>
    </div>
  </footer>
  </body>

  </html>