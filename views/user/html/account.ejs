    <script>
      const editProfileButton = document.querySelector('.profile-edit')
      const editCancelBtn = document.querySelector('.edit-cancel')
      const editSaveBtn  = document.querySelector('.edit-save')

      const inputs = document.getElementsByTagName( 'input' )
      console.log(inputs)

      //Edit profile button clicking functions
      editProfileButton.addEventListener('click', (event) => {
        event.preventDefault()

        inputs.forEach(input => {
          input.disabled = false
          editProfileButton.style.display = 'none'
          editCancelBtn.style.display = 'block'
          editSaveBtn.style.display = 'block'
        });
      })

      editCancelBtn.addEventListener('click', (event) => {
        event.preventDefault()

        inputs.forEach(input => {
          input.disabled = true
          editProfileButton.style.display = 'block'
          editCancelBtn.style.display = 'none'
          editSaveBtn.style.display = 'none'
        });
      })

     
    </script>
