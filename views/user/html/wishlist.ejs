<%- include('partials/productHeader.ejs') %>
<section class="wishlist">
  <div class="container search-container">
      <div class="py-5">
          <div class="my-5 ">
              <div class="row">
                <% products.forEach(product => {%> 
                  <div class="col-12 col-md-6 col-lg-3 mb-3 ">
                      <!-- Card Product-->
                      
                      <div class="card position-relative h-100 card-listing hover-trigger mb-0">
                          <div class="card-header">
                            <a class="mb-0 mx-2 mx-md-4 fs-p  text-decoration-none d-block text-center"
                                  href="/user/product-details/<%= product._id%>">
                              <picture class="position-relative overflow-hidden d-block bg-light">
                                  <img class="w-100 img-fluid position-relative z-index-10" title=""
                                      src="/assets/images/products/<%= product.image[0]%>"
                                      alt="Bootstrap 5 Template by Pixel Rocket">
                              </picture>
                              <div class="card-actions">
                                <a href="/user/add-to-cart">
                                  <span
                                  class="small text-uppercase tracking-wide fw-bolder text-center d-block qucik-add-button">Quick
                                  Add</span>
                                </a>
                                  
                                  <div class="d-flex justify-content-center align-items-center flex-wrap mt-3">
                                      <button class="btn btn-outline-dark btn-sm mx-2">S</button>
                                      <button class="btn btn-outline-dark btn-sm mx-2">M</button>
                                      <button class="btn btn-outline-dark btn-sm mx-2">L</button>
                                  </div>
                              </div>
                          </div>
                          <div class="card-body px-0 text-center mb-0">
                              <div class="d-flex justify-content-center align-items-center mx-auto mb-0">
                                  <!-- Review Stars Small-->
                                  <div class="rating position-relative d-table">
                                      <div class="position-absolute stars" style="width: 80%">
                                          <i class="ri-star-fill text-dark mr-1"></i>
                                          <i class="ri-star-fill text-dark mr-1"></i>
                                          <i class="ri-star-fill text-dark mr-1"></i>
                                          <i class="ri-star-fill text-dark mr-1"></i>
                                          <i class="ri-star-fill text-dark mr-1"></i>
                                      </div>
                                      <div class="stars">
                                          <i class="ri-star-fill mr-1 text-muted opacity-25"></i>
                                          <i class="ri-star-fill mr-1 text-muted opacity-25"></i>
                                          <i class="ri-star-fill mr-1 text-muted opacity-25"></i>
                                          <i class="ri-star-fill mr-1 text-muted opacity-25"></i>
                                          <i class="ri-star-fill mr-1 text-muted opacity-25"></i>
                                      </div>
                                  </div> <span class="small fw-bolder ms-2 text-muted"> 4.2 (123)</span>
                              </div>
                                  <%= product.name%>
                                <div class="price-wish">
                                  <p class="fw-bolder m-0 mt-2">$<%= product.price%></p>
                                </a>
                                  <a href="/user/remove-from-wishlist/<%= product._id%>" class="remove-from-wishlist">
                                    <button > <i class="ri-delete-bin-6-fill"></i></button>
                                  </a>
                                </div>
                          </div>
                        </div>
                    
                      <!--/ Card Product-->
                  </div>
                  <%})%>
              </div>
          </div>

          <div class="bg-dark p-4 text-white mt-3">
              <p class="lead m-0">Didn't find what you are looking for? <a
                      class="transition-all opacity-50-hover text-white text-link-border border-white pb-1 border-2"
                      href="#">Send us a message.</a></p>
          </div>
      </div>
  </div>
</section>

<script src="/js/user/userhome.js"></script>
</body>
</html>